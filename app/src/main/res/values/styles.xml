<resources>

    <!--<style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">-->
        <!--<item name="android:gravity">center_vertical</item>-->
        <!--<item name="contentInsetStart">0dp</item>-->
    <!--</style>-->
    <style name="Widget.App.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">?navigationTopBarSize</item>
        <item name="contentInsetStart">0.0dip</item>
        <item name="popupTheme">@style/AppTheme.PopMenu</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Topbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.Topbar.Subtitle</item>
        <item name="titleMargins">4.0dip</item>
        <item name="maxButtonHeight">?navigationTopBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TextAppearance.App.Topbar.Subtitle" parent="@style/TextAppearance.App.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.App.Topbar.Title" parent="@style/TextAppearance.App.XLarge">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.PopMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:listSelector">@drawable/item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/theme_color_primary</item>
        <item name="colorControlHighlight">@color/gray_trans</item>
    </style>

    <style name="AppTheme.NavigationView" parent="@style/AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="selectableItemBackground">@drawable/selector_navigation_menu_item_bg</item>
        <item name="textAppearanceListItem">@style/TextAppearance.App.Title</item>
        <item name="colorControlHighlight">#44bbbbbb</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
