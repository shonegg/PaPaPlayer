<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- for library use when is in night theme-->
        <item name="themeColorSecondary">@color/theme_color_secondary</item>

        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorPrimary">@color/text_primary_color</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080px</item>
    </style>

    <!-- - - Customize your theme here. - - -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TextAppearance.App</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.App.Large</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.App.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.App.Small</item>
        <item name="android:buttonStyle">@style/Widget.App.Button</item>
        <item name="android:windowBackground">@color/theme_color_window_background</item>
        <item name="android:progressBarStyleHorizontal">@style/Widget.App.ProgressBar.Horizontal
        </item>
        <item name="android:textColorLink">@color/theme_color_secondary</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="drawerArrowStyle">@style/Widget.App.Toolbar.DrawerArrowStyle</item>
        <item name="filterTabBarSize">@dimen/filter_bar_size</item>
        <item name="headLineTitleStyle">@style/Widget.App.HeadLineText</item>
        <item name="navigationBottomBarSize">@dimen/navigation_bottom_bar_size</item>
        <item name="navigationBottomTabStyle">@style/Widget.App.CompoundButton.Navigation</item>
        <item name="navigationTopBarSize">@dimen/navigation_top_bar_size</item>
        <item name="scalableImageView">@style/Widget.App.ImageView.Scalable</item>
        <item name="searchBarHeight">48.0dip</item>
        <item name="slidingTabBarSize">?navigationTopBarSize</item>
        <item name="themeColorSecondary">@color/theme_color_secondary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance.App.Topbar.Menu</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="selectableItemBackground">@drawable/item_background</item>
        <item name="selectableItemBackgroundBorderless">@drawable/item_background_borderless</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="popupMenuStyle">@style/Widget.App.ListPopupWindow</item>
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/theme_color_primary</item>
        <item name="colorControlHighlight">@color/gray_trans</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="buttonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.ListPopupWindow" parent="@style/Widget.AppCompat.ListPopupWindow">
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
    </style>

    <style name="Widget.App.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="height">?navigationTopBarSize</item>
        <item name="titleTextStyle">@style/TextAppearance.App.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.App.Subtitle</item>
        <item name="background">?colorPrimary</item>
        <item name="backgroundSplit">@color/white</item>
        <item name="elevation">@dimen/elevation</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="@style/TextAppearance.App.Medium" />

    <style name="TextAppearance.App.Topbar.Menu" parent="@style/TextAppearance.App.Subtitle" />

    <style name="Widget.App.CompoundButton.Navigation" parent="@android:style/Widget.CompoundButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Small</item>
        <item name="android:textColor">@color/selector_tab_text_pink</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Widget.App.HeadLineText" parent="">
        <item name="android:textAppearance">@style/TextAppearance.App.Title</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:minHeight">20.0dip</item>
        <item name="android:drawableRight">@drawable/ic_gray_arrow_right</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>

    <style name="Widget.App.Toolbar.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="AlertDialogStyle">
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="@style/AppTheme.AppCompat.Dialog.Alert">
        <item name="android:alertDialogStyle">@style/AlertDialogStyle</item>
    </style>

    <style name="Widget.App.ImageView.Scalable" parent="@style/Widget.App.ImageView">
        <item name="placeholderImage">@color/gray_light</item>
        <item name="placeholderImageScaleType">centerCrop</item>
    </style>

    <style name="Widget.App.ImageView" parent="" />

    <style name="TextAppearance.App" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.AppCompat" parent="@style/Base.TextAppearance.AppCompat" />

    <style name="TextAppearance.App.Large" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.App.Medium" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.App.Small" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Widget.App.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Title</item>
        <item name="android:minWidth">70.0dip</item>
        <item name="android:minHeight">36.0dip</item>
    </style>

    <style name="TextAppearance.App.Title" parent="@style/TextAppearance.App.Large">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.App.ProgressBar.Horizontal" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <!--<item name="android:indeterminateDrawable">@drawable/animationlist_progress_indeterminate_horizontal</item>-->
        <!--<item name="android:progressDrawable">@drawable/layerlist_progress_horizontal</item>-->
        <item name="android:minHeight">20.0dip</item>
    </style>

    <style name="AppTheme.Dialog" parent="@style/AppTheme.AppCompat.Dialog.Base">
        <item name="android:textAppearanceLarge">@style/TextAppearance.App.Large</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.App.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.App.Body</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.App.Headline</item>
        <item name="android:listSelector">@drawable/item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
        <item name="android:textAppearanceListItem">@style/TextAppearance.App.Title</item>
        <item name="selectableItemBackground">@drawable/item_background</item>
        <item name="colorPrimary">@color/theme_color_secondary</item>
        <item name="colorPrimaryDark">@color/theme_color_secondary_dark</item>
        <item name="colorAccent">@color/theme_color_secondary</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/theme_color_secondary</item>
        <item name="colorControlHighlight">@color/gray_trans</item>
    </style>

    <style name="AppTheme.AppCompat.Dialog.Base" parent="@style/Theme.AppCompat.Light.Dialog" />

    <style name="TextAppearance.App.Body" parent="@style/TextAppearance.App.Small">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="@style/TextAppearance.App.XLarge" />

    <style name="TextAppearance.App.XLarge" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>